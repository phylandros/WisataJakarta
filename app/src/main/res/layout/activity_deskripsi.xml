<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="#FFF">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFC436"
        android:orientation="horizontal">

        <View
            android:id="@+id/btnbackdeskripsi"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/baseline_arrow_back_ios_new_15"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-35dp"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/juduldeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi Button ID"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_gravity="center"
                />
        </RelativeLayout>


    </LinearLayout>

    <ScrollView
        android:id="@+id/deskripsicontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        >

        <TextView
            android:id="@+id/textdeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:justificationMode="inter_word"
            android:textColor="#000"/>

    </ScrollView>
</RelativeLayout>